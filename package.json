{
  "name": "fourmis",
  "version": "1.0.0",
  "private": true,
  "description": "Plateforme de valorisation de l'engagement Ã©tudiant",
  "scripts": {
    "dev:site": "turbo run dev --filter=@fourmis/site",
    "dev:web": "turbo run dev --filter=@fourmis/web",
    "dev:mobile": "turbo run dev --filter=@fourmis/mobile",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "turbo run db:migrate --filter=@fourmis/prisma",
    "db:push": "turbo run db:push --filter=@fourmis/prisma",
    "db:generate": "turbo run db:generate --filter=@fourmis/prisma",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
